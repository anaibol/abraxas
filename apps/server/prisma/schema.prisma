// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  password  String // Hashed password
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  players  Player[]
  friends  RequesterFriend[] @relation("Requester")
  friendOf RecipientFriend[] @relation("Recipient")
}

model RequesterFriend {
  id          String   @id @default(uuid())
  requesterId String
  requester   User     @relation("Requester", fields: [requesterId], references: [id])
  recipientId String
  status      String   @default("PENDING") // PENDING, ACCEPTED
  createdAt   DateTime @default(now())

  @@unique([requesterId, recipientId])
}

model RecipientFriend {
  id          String   @id @default(uuid())
  recipientId String
  recipient   User     @relation("Recipient", fields: [recipientId], references: [id])
  requesterId String
  status      String   @default("PENDING")
  createdAt   DateTime @default(now())

  @@unique([recipientId, requesterId])
}

model Player {
  id     String @id @default(uuid())
  userId String
  user   User   @relation(fields: [userId], references: [id])

  name      String
  classType String

  // Position
  x      Int    @default(0)
  y      Int    @default(0)
  facing String @default("down")

  // Stats
  hp      Int
  maxHp   Int
  mana    Int
  maxMana Int
  str     Int @default(10)
  agi     Int @default(10)
  intStat Int @default(10)

  // Leveling
  level Int @default(1)
  xp    Int @default(0)
  maxXp Int @default(100)

  gold Int @default(0)

  // Relations
  inventory InventoryItem[]

  // Equipment (stored as Item IDs)
  equipWeapon String?
  equipArmor  String?
  equipShield String?
  equipHelmet String?
  equipRing   String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([name]) // Player names must be unique globally
}

model InventoryItem {
  id       String @id @default(uuid())
  playerId String
  player   Player @relation(fields: [playerId], references: [id], onDelete: Cascade)

  itemId    String
  quantity  Int    @default(1)
  slotIndex Int

  @@index([playerId])
}
